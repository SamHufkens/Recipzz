<%- include('../partials/header.ejs') %> 

<%- include('../partials/nav.ejs')  %> 

<main>
    <div class="create-btn">
        <p><a href="/create"><i class="fa-solid fa-plus fa-3x"></i></a></p>
    </div>
    <div class="recipe-container">
        <div class="recipe-cards">
            <% if (recipes.length > 0) { %> 
                <% recipes.forEach(recipe => {%> 
            <div class="recipe-card">
                <div class="img-section">
                    <img src="img/pexels-robin-stickel-70497.jpg" width="250" alt="">
                </div>
                <div class="card-text">
                    <h3><%= recipe.title  %></h3>
                    <div class="detail-btn">
                        <a href="/<%= recipe._id  %> ">View Recipe</a>
                    </div>
                </div>
            </div>
                <% })  %> 
            <% } else { %> 
                <p>No recipes available...</p>
            <% } %> 
        </div>
    </div>
</main>
</body>
</html>